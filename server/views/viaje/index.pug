extends ../layout/index

block contenido
    main.container.mt-5
        .row
            .col-md-5
                img.img-fluid(src=`/img/destinos_${viaje.imagen}_ln.jpg`)  
            .col-md-7
                h1 #{viaje.titulo}
                p 
                    i.fas.fa-calendar-alt 
                    |  Fecha ida: #{viaje.fechaIda} - Fecha vuelta: #{viaje.fechaVuelta}
                    p 
                    i.fas.fa-dollar-sign 
                    |  #{viaje.precio}
                    p 
                    i.fas.fa-users 
                    |  #{viaje.disponible} Disponibles 
                    p= viaje.descripcion 